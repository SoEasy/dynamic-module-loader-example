.layout
  display block
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  overflow hidden

  &-header-wrapper
    height 48px
    position relative
    z-index 200

    &--shadowed
      box-shadow 0px 2px 12px 0px rgba(0, 0, 0, 0.12)

  &-content
    position absolute
    top 48px
    left 0
    right 0
    bottom 0
    overflow-x hidden
    overflow-y scroll
    z-index 100
    &__wrapper
      width 1054px
      margin 0 auto